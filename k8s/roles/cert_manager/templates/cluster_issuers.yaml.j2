
{% for issuer in cert_manager_cluster_issuers %}
---
apiVersion: v1
kind: Secret
metadata:
  name: {{ issuer.name }}
  namespace: cert-manager
data:
  tls.crt: {{ issuer.ca_crt }} 
  tls.key: {{ issuer.ca_key }}
--- 
apiVersion: cert-manager.io/v1beta1
kind: ClusterIssuer
metadata:
  name: {{ issuer.name }}
spec:
  ca:
    secretName: {{ issuer.name }}  
{% endfor %}
